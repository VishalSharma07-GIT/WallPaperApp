<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFullWallpaper"
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/btnShare"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/outline_circle"
            android:gravity="center">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                android:paddingLeft="7dp"/>
        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_round"
        android:padding="0dp"
        android:elevation="12dp">


        <TextView
            android:id="@+id/txtDescription"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginBottom="18dp"
            android:text="Description Goes Here"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:padding="8dp">

            <FrameLayout
                android:id="@+id/btnShare"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_circle_button"
                android:gravity="center">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share" />
            </FrameLayout>



            <TextView
                android:id="@+id/btnDownload"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_download_btn"
                android:gravity="center"
                android:text="Download"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/btnFavorite"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_circle_button"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnFavoriteIcon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_favorite_border"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
