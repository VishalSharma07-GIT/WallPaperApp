<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.wallpaperapp.ui.splash.SplashFragment"
        android:label="Splash" >
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboardingFragment" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@+id/homeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.wallpaperapp.ui.onboarding.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/action_onboarding_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.wallpaperapp.ui.favorites.FavoritesFragment"
        android:label="Favorites" />


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.wallpaperapp.ui.home.HomeFragment"
        android:label="Home" />
    <fragment
        android:id="@+id/wallpaperDetailFragment"
        android:name="com.example.wallpaperapp.ui.detail.WallpaperDetailFragment"
        android:label="Wallpaper Detail">

        <argument
            android:name="imageUrl"
            app:argType="string" />

    </fragment>

</navigation>
